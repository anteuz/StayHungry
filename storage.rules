rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Only authenticated users can access storage with size and type restrictions
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }
    
    // Recipe images can only be accessed by the owner
    match /recipeImages/{recipeUUID}/{allPaths=**} {
      allow read, write: if request.auth != null 
        && resource.metadata.owner == request.auth.uid;
      allow create: if request.auth != null 
        && request.resource.metadata.owner == request.auth.uid;
    }
  }
}