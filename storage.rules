rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Only authenticated users can access storage
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Recipe images can only be accessed by the owner
    match /recipeImage_{recipeUUID} {
      allow read, write: if request.auth != null 
        && resource.metadata.owner == request.auth.uid;
      allow create: if request.auth != null 
        && request.resource.metadata.owner == request.auth.uid;
    }
    
    // Limit file size to 10MB and only allow image types
    match /{allPaths=**} {
      allow write: if request.auth != null 
        && resource.size < 10 * 1024 * 1024
        && resource.contentType.matches('image/.*');
    }
  }
}