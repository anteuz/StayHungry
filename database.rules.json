{
  "rules": {
    "users": {
      "$ownerUid": {
        ".read": "auth != null && auth.uid == $ownerUid",
        ".write": "auth != null && auth.uid == $ownerUid",

        "shopping-list": {
          ".read": "auth != null && (auth.uid == $ownerUid || root.child('users/' + $ownerUid + '/shared_data_access/' + auth.uid + '/shopping-list').val() === true)",
          ".write": "auth != null && (auth.uid == $ownerUid || root.child('users/' + $ownerUid + '/shared_data_access/' + auth.uid + '/shopping-list').val() === true)",
        },

        "recipes": {
          ".read": "auth != null && (auth.uid == $ownerUid || root.child('users/' + $ownerUid + '/shared_data_access/' + auth.uid + '/recipes').val() === true)",
          ".write": "auth != null && (auth.uid == $ownerUid || root.child('users/' + $ownerUid + '/shared_data_access/' + auth.uid + '/recipes').val() === true)",
          "$recipeId": {
            ".validate": "newData.hasChildren(['uuid', 'name'])"
          }
        },

        "shared_data_access": {
          ".read": "auth != null && auth.uid == $ownerUid",
          ".write": "auth != null && auth.uid == $ownerUid",
          "$guestUid": {
            ".read": false,
            ".write": false
          }
        },

        "items": {
          ".read": "auth != null && auth.uid == $ownerUid",
          ".write": "auth != null && auth.uid == $ownerUid",
          "$itemId": {
            ".read": "auth != null && auth.uid == $ownerUid",
            ".write": "auth != null && auth.uid == $ownerUid",
            ".validate": "newData.hasChildren(['uuid', 'itemName'])"
          }
        },
        "weekly-menu": {
          ".read": "auth != null && auth.uid == $ownerUid",
          ".write": "auth != null && auth.uid == $ownerUid",
          "$menuId": {
            ".read": "auth != null && auth.uid == $ownerUid",
            ".write": "auth != null && auth.uid == $ownerUid"
          }
        },
        "profile": {
          ".read": "auth != null && auth.uid == $ownerUid",
          ".write": "auth != null && auth.uid == $ownerUid",
          ".validate": "newData.hasChildren(['email', 'uid'])"
        }
      }
    },
    "$other": {
      ".read": false,
      ".write": false
    },
    ".read": false,
    ".write": false
  }
}
